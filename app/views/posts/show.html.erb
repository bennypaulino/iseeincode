<div class="post_show_content skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @post.content %>
  </div>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit post", edit_post_path(@post) %>
      <%= link_to "Delete post", post_path(@post), method: :delete, data: { confirm: "Are you sure? "} %>
    </div>
  <% end %>

  <hr>

  <div id="share_box">
    <p>Share<p>
    <!-- Twitter -->
    <a onclick="window.open('http://twitter.com/share?text=<%= @post.title %> by @i_see_in_code - &url=<%= post_url %>', '_blank','width=800,height=500,top=200,left=300');void(0);" ><i class="fa fa-twitter"></i></a>

    <!-- Facebook -->
    <a onclick="window.open('http://facebook.com/sharer.php?u=<%= post_url %>&description=<%= @post.title %> ',' _blank','width=800,height=500,top=200,left=300');void(0);" ><i class="fa fa-facebook"></i></a>


    <!-- Reddit -->
    <a onclick="window.open = 'http://www.reddit.com/submit?url=<%= post_url %>' + encodeURIComponent(window.location); return false"><i class="fa fa-reddit"></i></a>
