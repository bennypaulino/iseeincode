<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
  <h2><%= pluaralize( @project.errors.count, "error" ) %> prevented this project from saving:</h2>
  <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>


  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.input :image %>
  <br>
  <br>

  <%= f.label :description, 'Write about your awesome project here' %>
  <br>
  <%= text_area_tag :editor, "", :class => "redactor", :rows => 40, :cols => 120 %>

  <br>
  <br>

  <%= f.label :link %>
  <br>
  <%= f.text_field :link %>

  <br>
  <br>

  <%= f.submit %>

<% end %>